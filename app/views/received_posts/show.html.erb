<!-- Main content -->
<section class="content">
  <!-- Default box -->
  <div class="box box-info">
    <div class="box-header with-border">
      <h3 class="box-title">Received Post</h3>
    </div>

    <div class="box-body">
      <p>
        <strong><%= t('activerecord.attributes.received_post.message') %>: </strong>
        <%= @received_post.message %>
      </p>

      <p>
        <strong><%= t('activerecord.attributes.received_post.created_at') %>: </strong>
        <%= @received_post.created_at.strftime("%T - %m/%d/%Y") %>
      </p>

      <p>
        <%= link_to received_posts_path, class: "btn btn-default" do %>
          <i class="fa fa-undo"></i><%= t('actions.back') %>
        <% end %>
      </p>
    </div>
  </div>
  <!-- /.box -->
</section>
<!-- /.content -->